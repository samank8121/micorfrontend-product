{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist"    
  },
  "include": ["src", "declarations.d.ts", "src/@types"],
  "exclude": ["node_modules"]
}
